
@{
    ViewBag.Title = "Import Excel";
}
<link href="~/Content/plugins/datatables.net-bs/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/plugins/sweetalert/sweetalert.css" rel="stylesheet" />
<link href="~/Content/plugins/select2/select2.min.css" rel="stylesheet" />
<link href="~/Content/plugins/datatables.net-bs/responsive.dataTables.min.css" rel="stylesheet" />
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        อัปโหลด/ดูประวัติไฟล์ Excel
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-table"></i> Excel</a></li>
        <li class="active">อัปโหลด/ดูประวัติไฟล์ Excel</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">อัปโหลดไฟล์ Excel</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputFile">เลือกไฟล์ Excel</label>
                            <input type="file" id="exampleInputFile">

                            <p class="help-block">(xlsx , xlx).</p>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /.row -->

    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">ประวัติไฟล์ที่อัปโหลด</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="col-lg-12">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label class="col-sm-2" style="padding:0px;">วันที่</label>
                                    <div class="input-group date col-sm-10" style="padding:0px;">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="form-control" id="datepicker">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label class="col-sm-2" style="padding:0px;">พนักงาน</label>
                                    <div class="col-sm-10" style="padding:0px;">
                                        <select class="form-control">
                                            <option>ทั้งหมด</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <button class="btn btn-success">กรองข้อมูล</button>
                                <button class="btn btn-danger">ล้างค่า</button>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <br />
                            <table id="excel-file-table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>ลำดับที่</th>
                                        <th>ชื่อไฟล์</th>
                                        <th>วันที่อัปโหลด</th>
                                        <th>พนักงาน</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>

<script type="text/javascript" src='@Url.Content("~/Scripts/datatables.net/jquery.dataTables.min.js")'></script>
<script type="text/javascript" src='@Url.Content("~/Scripts/sweetalert/sweetalert.min.js")'></script>
<script type="text/javascript" src='@Url.Content("~/Scripts/datatables.net-bs/dataTables.bootstrap.min.js")'></script>
<script type="text/javascript" src='@Url.Content("~/Scripts/select2/select2.full.min.js")'></script>
<script type="text/javascript" src='@Url.Content("~/Scripts/datatables.net/dataTables.responsive.min.js")'></script>
<script type="text/javascript" src='@Url.Content("~/Scripts/logisitcs/importexcel.js")'></script>